<div class="auth-container">
  <h1 class="page-title">User Profile</h1>

  <div class="card mx-auto user-profile-card">
    <div class="card-body text-center">
      <h2 class="user-name">
        <% if user.username.present? %>
          <%= user.username %>
        <% elsif user.firstname.present? && user.name.present? %>
          <%= "#{user.firstname} #{user.name}" %>
        <% else %>
          User #<%= user.id %>
        <% end %>
      </h2>

      <% if user.show_firstname %>
        <p><strong>First Name:</strong> <%= user.firstname %></p>
      <% end %>

      <% if user.show_name %>
        <p><strong>Last Name:</strong> <%= user.name %></p>
      <% end %>

      <% if user.show_email %>
        <p><strong>Email:</strong> <%= user.email %></p>
      <% end %>

      <% if user.show_age && user.age.present? %>
        <p><strong>Age:</strong> <%= user.age %></p>
      <% end %>

      <div class="user-actions">
        <% if current_user == user %>
          <%= link_to 'Modify', edit_user_path(user), class: "btn btn-success" %>
          <%= button_to "Delete My Account", user_path(user), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
        <% end %>

        <%= link_to 'Return', members_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
