<div class="container">
  <h2 class="title">Edit <%= @user.email %></h2>

  <div class="form-container">
    <%= form_with(model: [:admin, @user], local: true) do |form| %>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :username %>
        <%= form.text_field :username, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :firstname %>
        <%= form.text_field :firstname, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :age %>
        <%= form.number_field :age, class: "form-control" %>
      </div>

      <% if current_user.admin? || current_user.super_admin? %>
        <div class="form-group">
          <%= form.label :role %>
          <%= form.select :role, [["User", "user"], ["Admin", "admin"], ["Super Admin", "super_admin"]], {}, class: "form-control" %>
        </div>
      <% end %>

      <div class="form-actions">
        <%= form.submit "Update", class: "btn btn-success" %>
        <%= link_to 'Back', admin_users_path, class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
</div>
