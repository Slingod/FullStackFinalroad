<%= form_with model: @event, url: admin_events_path, local: true do |form| %>
  <div class="auth-field">
    <%= form.label :titre %>
    <%= form.text_field :titre, class: 'form-control' %>
  </div>

  <div class="auth-field">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="auth-field">
    <%= form.label :prix %>
    <%= form.number_field :prix, step: 0.01, class: 'form-control' %>
  </div>

  <div class="auth-field">
    <%= form.label :emplacement %>
    <%= form.text_field :emplacement, class: 'form-control' %>
  </div>

  <div class="auth-field">
    <%= form.label :fichiers_medias %>
    <%= form.file_field :media_files, multiple: true, accept: "image/*,video/*", class: 'form-control' %>
  </div>

  <%= form.submit "Sauvegarder", class: "btn btn-primary" %>
<% end %>
