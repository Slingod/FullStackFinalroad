<div class="container mt-5">
  <div class="card">
    <div class="card-header">
      <h3 class="card-title text-center">Create New Event</h3>
    </div>
    <div class="card-body">
      <%= form_with(model: @event, local: true, html: { class: 'needs-validation', novalidate: true }) do |form| %>
        <% if @event.errors.any? %>
          <div class="alert alert-danger">
            <h4><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h4>
            <ul>
              <% @event.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :title, class: 'control-label' %>
          <%= form.text_field :title, class: 'form-control', placeholder: 'Enter event title' %>
        </div>

        <div class="form-group">
          <%= form.label :author, class: 'control-label' %>
          <%= form.text_field :author, class: 'form-control', placeholder: 'Enter event author' %>
        </div>

        <div class="form-group">
          <%= form.label :location, class: 'control-label' %>
          <%= form.text_field :location, class: 'form-control', placeholder: 'Enter event location' %>
        </div>

        <div class="form-group">
          <%= form.label :price, class: 'control-label' %>
          <%= form.number_field :price, class: 'form-control', placeholder: 'Enter event price' %>
        </div>

        <div class="form-group">
          <%= form.label :duration, class: 'control-label' %>
          <%= form.number_field :duration, class: 'form-control', placeholder: 'Enter event duration' %>
        </div>

        <div class="form-group">
          <%= form.label :date, class: 'control-label' %>
          <%= form.date_select :date, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :picture, class: 'control-label' %>
          <%= form.file_field :picture, class: 'form-control-file' %>
        </div>

        <div class="form-group text-center">
          <%= form.submit 'Create Event', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
