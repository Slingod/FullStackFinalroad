<%= form_with(model: @event, local: true) do |form| %>
  <div class="container py-5">
    <div class="card shadow-lg rounded-lg">
      <div class="card-header text-center">
        <h3>Create or Edit Event</h3>
      </div>

      <div class="card-body">
        
        
        <div class="form-group mb-3">
          <%= form.label :title, class: 'form-label' %>
          <%= form.text_field :title, class: 'form-control', placeholder: 'Enter event title' %>
        </div>

        
        <div class="form-group mb-3">
          <%= form.label :author, class: 'form-label' %>
          <%= form.text_field :author, class: 'form-control', placeholder: 'Enter event author' %>
        </div>

        
        <div class="form-group mb-3">
          <%= form.label :location, class: 'form-label' %>
          <%= form.text_field :location, class: 'form-control', placeholder: 'Enter event location' %>
        </div>

        
        <div class="form-group mb-3">
          <%= form.label :duration, class: 'form-label' %>
          <%= form.number_field :duration, class: 'form-control', placeholder: 'Duration in minutes' %>
        </div>

        
        <div class="form-group mb-3">
          <%= form.label :price, class: 'form-label' %>
          <%= form.number_field :price, class: 'form-control', placeholder: 'Event price in €' %>
        </div>

        
        <div class="form-group mb-3">
          <%= form.label :date, class: 'form-label' %>
          <%= form.date_select :date, class: 'form-control' %>
        </div>

       
        <div class="form-group mb-3">
          <%= form.label :pictures, class: 'form-label' %>
          <%= form.file_field :pictures, multiple: true, class: 'form-control-file' %>
        </div>

        
        <div class="form-group mb-3">
          <%= form.label :videos, "Upload Videos", class: 'form-label' %>
          <%= form.file_field :videos, multiple: true, accept: 'video/*', class: 'form-control-file' %>
        </div>

       
        <div class="form-group text-center">
          <%= form.submit 'Save Event', class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<style>
  .card {
    border-radius: 20px; /* Plus arrondi */
  }

  .card-header {
    color: black; /* Couleur de texte noire pour l'en-tête */
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
    font-weight: bold;
  }

  .form-control, .form-control-file {
    border-radius: 10px; /* Coins arrondis pour les champs */
  }

  .btn {
    border-radius: 10px; /* Coins arrondis pour le bouton */
  }

  .btn:hover {
    background-color: #0056b3;
  }

  .shadow-lg {
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.1); /* Ombre plus prononcée */
  }

  .form-group label {
    font-weight: bold;
  }
</style>
