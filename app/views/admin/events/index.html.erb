<h1>Event Management</h1>
<%= link_to "Create New Event", new_admin_event_path, class: "btn btn-success" %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Location</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.location %></td>
        <td><%= number_to_currency(event.price) %></td>
        <td>
          <%= link_to "Edit", edit_admin_event_path(event), class: "btn btn-warning" %>
          <%= link_to "Delete", admin_event_path(event), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
