<section class="auth-container">
  <h2 class="auth-title">Renvoyer les Instructions de Déverrouillage</h2>

  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="auth-field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "auth-input" %>
    </div>

    <div class="auth-actions">
      <%= f.submit "Renvoyer les Instructions de Déverrouillage", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>