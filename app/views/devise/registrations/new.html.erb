<div class="auth-container">
  <h2 class="auth-title">Sign Up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="auth-field">
      <%= f.label :username, "Username" %>
      <%= f.text_field :username, required: true, placeholder: "Your username" %>
    </div>

    <div class="auth-field">
      <%= f.label :email, "Email" %><br />
      <%= f.email_field :email, autocomplete: "email", required: true, placeholder: "Email" %>
    </div>

    <div class="auth-field">
      <%= f.label :password, "Password" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", required: true %>
    </div>

    <div class="auth-field">
      <%= f.label :password_confirmation, "Confirm your password" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
    </div>

    <div class="auth-actions">
      <%= f.submit "Sign Up", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="auth-actions">
    <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-success" %>
  </div>
</div>