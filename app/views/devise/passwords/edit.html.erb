<section class="auth-container">
  <h2 class="auth-title">Changer votre Mot de Passe</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "auth-form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="auth-field">
      <%= f.label :password, "Nouveau mot de passe" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caractères minimum)</em>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "auth-input" %>
    </div>

    <div class="auth-field">
      <%= f.label :password_confirmation, "Confirmer le nouveau mot de passe" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "auth-input" %>
    </div>

    <div class="auth-actions">
      <%= f.submit "Changer mon mot de passe", class: "btn btn-primary" %>
      <%= link_to "Retour à la connexion", new_session_path(resource_name), class: "btn btn-success" %>
    </div>
  <% end %>
</section>
