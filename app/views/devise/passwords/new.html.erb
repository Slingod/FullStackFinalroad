<section class="auth-container">
  <h2 class="auth-title">Réinitialiser le Mot de Passe ?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="auth-field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "auth-input" %>
    </div>

    <div class="auth-actions">
      <%= f.submit "Réinitialiser le Mot de Passe", class: "btn btn-primary" %>
      <%= link_to "Se Connecter", new_session_path(resource_name), class: "btn btn-success" %>
      <%= link_to "S'Inscrire", new_registration_path(resource_name), class: "btn btn-danger" %>
    </div>
  <% end %>
</section>
