<div class="auth-container">
  <h1 class="auth-title">Contact Us</h1>

  <%= form_with(model: @contact, url: contact_path, method: :post, local: true) do |f| %>
    <div class="auth-field">
      <%= f.label :name, "Name", class: "auth-label" %><br />
      <%= f.text_field :name, required: true, placeholder: "Your name", class: "auth-input" %>
    </div>

    <div class="auth-field">
      <%= f.label :email, "Email", class: "auth-label" %><br />
      <%= f.email_field :email, required: true, placeholder: "Your email", class: "auth-input" %>
    </div>

    <div class="auth-field">
      <%= f.label :message, "Message", class: "auth-label" %><br />
      <%= f.text_area :message, required: true, placeholder: "Your message", class: "auth-textarea" %>
    </div>

    <div class="auth-actions">
      <%= f.submit "Send Message", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
