<div class="auth-container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg rounded">
        <div class="card-header bg-primary text-white">
          <h2 class="card-title text-center"><%= @event.author %></h2>
        </div>

        <div class="card-body">
          <!-- Event Details -->
          <div class="mb-3">
            <p><strong>Location:</strong> <%= @event.location %></p>
            <p><strong>Duration:</strong> <%= @event.duration %> minutes</p>
            <p><strong>Price:</strong> <%= @event.price %> â‚¬</p>
            <p><strong>Date:</strong> <%= @event.date.strftime("%d %B %Y") %></p>
            <p><strong>Participants:</strong> <%= @participant_count %></p>
          </div>

          <hr>

          <!-- Event Pictures -->
          <div class="mb-3">
            <h4>Pictures</h4>
            <% if @event.pictures.attached? %>
              <div class="row custom-image-grid">
                <% @event.pictures.each do |picture| %>
                  <div class="col-6 col-sm-4 col-md-3 mb-3 custom-image-item">
                    <%= image_tag url_for(picture), alt: "Event Image", class: "custom-image" %>
                  </div>
                <% end %>
              </div>
            <% else %>
              <p class="text-muted">No images available</p>
            <% end %>
          </div>
          

      <!-- Event Videos -->
      <div class="mb-3">
        <h4>Videos</h4>
        <% if @event.videos.attached? %>
          <div class="row custom-video-grid">
            <% @event.videos.each do |video| %>
              <div class="col-6 col-sm-4 col-md-3 mb-3 custom-video-item">
                <video controls class="custom-video img-fluid">
                  <source src="<%= url_for(video) %>" type="video/mp4">
                  Your browser does not support the video tag.
                </video>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-muted">No videos available</p>
        <% end %>
      </div>


          <hr>

          <!-- Action Buttons -->
          <div class="auth-actions" style="display: flex; justify-content: center; gap: 15px; margin-top: 20px;">
            <a href="<%= root_path %>" class="btn btn-primary">Back to Home Page</a>

            <!-- Registration/Unsubscription Button -->
            <% if current_user && @event.date >= Date.today %>
              <% if @event.user_participating?(current_user) %>
                <%= button_to "Unregister", toggle_participation_event_path(@event), method: :post, class: "btn btn-danger" %>
              <% else %>
                <%= button_to "Register", toggle_participation_event_path(@event), method: :post, class: "btn btn-success" %>
              <% end %>
            <% end %>

            <!-- Admin and Super Admin Actions -->
            <% if current_user && (current_user.admin? || current_user.super_admin?) %>
              <a href="<%= edit_event_path(@event) %>" class="btn btn-success">Edit Event</a>
              <%= button_to "Delete", event_path(@event), method: :delete, data: { confirm: "Are you sure you want to delete this event?" }, class: "btn btn-danger" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>