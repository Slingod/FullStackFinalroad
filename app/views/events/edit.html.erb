<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      
      <div class="card shadow-lg" style="border-radius: 20px; background: linear-gradient(135deg, #c1e1ec, #d1c4e9); padding: 20px;">
        <div class="card-body text-center">
          <h2 style="font-weight: bold;">Modify Event</h2>

          <%= form_with(model: @event, local: true) do |form| %>

            <% if @event.errors.any? %>
              <div class="alert alert-danger mb-4">
                <ul>
                  <% @event.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group mb-3">
              <%= form.label :author, class: 'form-label' %>
              <%= form.text_field :author, class: 'form-control' %>
            </div>

            <div class="form-group mb-3">
              <%= form.label :location, class: 'form-label' %>
              <%= form.text_field :location, class: 'form-control' %>
            </div>

            <div class="form-group mb-3">
              <%= form.label :pictures, 'Pictures', class: 'form-label' %>
              <%= form.file_field :pictures, multiple: true, class: 'form-control' %>

              <% if @event.pictures.attached? %>
                <div class="mt-3">
                  <% if @event.pictures.any? %> 
                    <%= image_tag @event.pictures.first.variant(resize: "200x200"), class: 'img-fluid rounded' %>
                  <% end %>
                </div>
              <% end %>
            </div>

            <div class="form-group mb-3">
              <%= form.label :videos, 'Videos', class: 'form-label' %>
              <%= form.file_field :videos, multiple: true, class: 'form-control' %>

              <% if @event.videos.attached? %>
                <div class="mt-3">
                  <% @event.videos.each do |video| %>
                    <%= video_tag url_for(video), controls: true, class: 'video-fluid', style: 'max-width: 200px; height: auto;' %>
                  <% end %>
                </div>
              <% end %>
            </div>

            <div class="form-group mb-3">
              <%= form.label :duration, class: 'form-label' %>
              <%= form.number_field :duration, class: 'form-control' %>
            </div>

            <div class="form-group mb-3">
              <%= form.label :price, class: 'form-label' %>
              <%= form.number_field :price, step: 0.01, class: 'form-control' %>
            </div>

            <div class="form-group mb-3">
              <%= form.label :date, class: 'form-label' %>
              <%= form.date_select :date, { start_year: 2021, end_year: 2026 }, class: 'form-control' %>
            </div>

            <div class="d-flex justify-content-between mt-4">
              <%= link_to 'Back to Event', event_path(@event), class: 'btn btn-primary' %>
              <%= form.submit 'Modify Event', class: 'btn btn-success' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  body {
    background-image: url('https://www.transparenttextures.com/patterns/dark-fish-skin.png');
    background-size: cover;
  }
  .card {
    background: rgba(255, 255, 255, 0.8);
  }
</style>
