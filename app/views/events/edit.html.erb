<div class="auth-container mt-5">
  <div class="auth-field row justify-content-center">
    <div class="col-md-8">
      
      <div class="card shadow-sm">
        <div class="card-header text-center">
          <h2>Modify Event</h2>
        </div>

        <div class="card-body">
          <%= form_with(model: @event, local: true) do |form| %>
            
            <% if @event.errors.any? %>
              <div class="alert alert-danger mb-4">
                <ul>
                  <% @event.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            
            <div class="form-group mb-3">
              <%= form.label :author, class: 'form-label' %>
              <%= form.text_field :author, class: 'form-control' %>
            </div>

            
            <div class="form-group mb-3">
              <%= form.label :location, class: 'form-label' %>
              <%= form.text_field :location, class: 'form-control' %>
            </div>

            
            <div class="form-group mb-3">
              <%= form.label :pictures, 'Pictures', class: 'form-label' %>
              <%= form.file_field :pictures, multiple: true, class: 'form-control' %>
              
              <% if @event.pictures.attached? %>
                <div class="mt-3">
                  <strong>Current Image:</strong>
                  <% if @event.pictures.any? %> 
                    <%= image_tag @event.pictures.first.variant(resize: "200x200"), class: 'img-fluid' %>
                  <% end %>
                </div>
              <% end %>
            </div>

            
            <div class="form-group mb-3">
              <%= form.label :videos, 'Videos', class: 'form-label' %>
              <%= form.file_field :videos, multiple: true, class: 'form-control' %>

              <% if @event.videos.attached? %>
                <div class="mt-3">
                  <strong>Current Video:</strong>
                  <% @event.videos.each do |video| %>
                    <%= video_tag url_for(video), controls: true, class: 'video-fluid', style: 'max-width: 200px; height: auto;' %>
                  <% end %>
                </div>
              <% end %>
            </div>

            
            <div class="form-group mb-3">
              <%= form.label :duration, class: 'form-label' %>
              <%= form.number_field :duration, class: 'form-control' %>
            </div>

            
            <div class="form-group mb-3">
              <%= form.label :price, class: 'form-label' %>
              <%= form.number_field :price, step: 0.01, class: 'form-control' %>
            </div>

            
            <div class="form-group mb-3">
              <%= form.label :date, class: 'form-label' %>
              <%= form.date_select :date, { start_year: 2021, end_year: 2026 }, class: 'form-control' %>
            </div>

            <%= form.submit 'Modify Event', class: 'btn btn-success btn-block' %>
          <% end %>
        </div>

        
        <div class="card-footer text-center">
          <%= link_to 'Back', event_path(@event), class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .card {
    border-radius: 8px;
  }

  .card-header {
    background-color: #f8f9fa;
    color: #000;
  }

  .form-control {
    border-radius: 5px;
  }

  .btn {
    border-radius: 5px;
  }

  .btn:hover {
    background-color: #0056b3;
  }

  .shadow-sm {
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
  }

  .alert-danger {
    background-color: #f8d7da;
    color: #721c24;
  }
</style>
